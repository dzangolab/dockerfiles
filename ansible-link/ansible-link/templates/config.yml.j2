####################################################################
# ANSIBLE LINK CONFIGURATION                                       #
# Generated by Ansible role - dzangolab.ansible.docker_ansible-link #
####################################################################

{% if ansible_link__webhook %}
# webhook
webhook:
  url: "{{ ansible_link__config_webhook.url }}"
  type: "{{ ansible_link__config_webhook.type | default('generic') }}"
  timeout: {{ ansible_link__config_webhook.timeout | default(5) }}
{% else %}
# webhook
# webhook:
#   url: "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
#   type: "slack" # "slack", "discord" or "generic" supported
#   timeout: 5  # optional, default 5 seconds
{% endif %}

# flask
host: '{{ ansible_link__config_host }}'
port: {{ ansible_link__config_port }}
debug: {{ ansible_link__config_debug }}

# ansible-runner
suppress_ansible_output: {{ ansible_link__config_suppress_ansible_output }}
omit_event_data: {{ ansible_link__config_omit_event_data }}
only_failed_event_data: {{ ansible_link__config_only_failed_event_data }}

# prometheus
metrics_port: {{ ansible_link__config_metrics_port }}

# general
playbook_dir: '{{ ansible_link__config_playbook_dir }}'
inventory_file: '{{ ansible_link__config_inventory_file }}'
job_storage_dir: '{{ ansible_link__config_job_storage_dir }}'
log_level: '{{ ansible_link__config_log_level }}'

# ansible-link
playbook_whitelist: {{ ansible_link__config_playbook_whitelist }}